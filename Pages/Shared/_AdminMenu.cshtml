@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService _authorizationServices

@{
    var resultAuthorize = await _authorizationServices.AuthorizeAsync(this.User, "ShowAdminMenu");
}

@if (resultAuthorize.Succeeded)
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#">
            Permission Menu
        </a>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/admin/roles">Roles</a></li>
            <div class="dropdown-divider" ></div>
            <li><a class="dropdown-item" href="/admin/user">Users</a></li>
        </ul>
    </li>
}